<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.restaurantappprojektandroid.MealDetailFragment" >

    <ImageView
        android:id="@+id/iv_mealDetail"
        android:layout_width="290dp"
        android:layout_height="329dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_mealDetail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/iv_mealDetail"
        app:layout_constraintTop_toBottomOf="@+id/iv_mealDetail" />

    <TextView
        android:id="@+id/tv_preis_Detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="preis"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/iv_mealDetail"
        app:layout_constraintTop_toBottomOf="@+id/iv_mealDetail" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="72dp"
        android:text="description"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/tv_mealDetail_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_mealDetail_title" />

    <ImageView
        android:id="@+id/iv_Hearth"
        android:layout_width="46dp"
        android:layout_height="58dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/heart"
        app:layout_constraintBottom_toBottomOf="@+id/iv_mealDetail"
        app:layout_constraintEnd_toEndOf="@+id/iv_mealDetail"
        app:layout_constraintTop_toTopOf="@+id/iv_mealDetail"
        app:layout_constraintVertical_bias="0.044" />
</androidx.constraintlayout.widget.ConstraintLayout>